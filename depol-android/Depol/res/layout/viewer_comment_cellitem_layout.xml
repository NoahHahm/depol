<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:orientation="vertical" >

    <com.tacademy.depol.widget.UserRoundedImageView
        android:id="@+id/likeUserPictureView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/com_facebook_profile_default_icon" />

    <TextView
        android:id="@+id/newView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/comment_userName"
        android:layout_below="@+id/comment_userName"
        android:layout_marginTop="6dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/C_606366"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/versionOldView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newView"
        android:layout_below="@+id/newView"
        android:layout_marginTop="8dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/C_898E91"
        android:visibility="gone"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/comment_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/likeUserPictureView"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/C_606366"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/btn_replay_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:src="@drawable/reply_delete"
        android:visibility="gone" />

</RelativeLayout>
