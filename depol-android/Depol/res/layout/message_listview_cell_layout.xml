
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color">

    <RelativeLayout
        android:id="@+id/back"
        android:background="@color/main_background_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/front"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="front" >

        <com.tacademy.depol.widget.UserRoundedImageView
            android:id="@+id/message_profile_picture_view"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/com_facebook_profile_default_icon" />

        <TextView
            android:id="@+id/message_desc_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/message_username_textview"
            android:layout_below="@+id/message_username_textview"
            android:layout_marginTop="8dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/message_desc_text_color"
            android:maxLines="2"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/message_time_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:layout_marginRight="18dp"
            android:text="12:48PM"
        	android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/message_time_color"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/message_username_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/message_profile_picture_view"
            android:singleLine="false"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white_color"
            android:textSize="12sp" />

    </RelativeLayout>

</FrameLayout>