<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp" >

    <RelativeLayout
        android:id="@+id/basicinfo_nameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <EditText
            android:id="@+id/basicinfo_nameEditView"
            android:layout_width="225dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_basic_edit_text"
            android:ems="10"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/white_color"
            android:textCursorDrawable="@null"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/basic_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/C_8F8F95"
            android:textCursorDrawable="@null"
            android:textSize="10sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/basicinfo_jobView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" >

        <EditText
            android:id="@+id/basicinfo_jobEditView"
            android:layout_width="225dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_basic_edit_text"
            android:ems="10"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textCursorDrawable="@null"
            android:textColor="@color/white_color"
            android:textSize="12sp" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/info_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/basic_job"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/C_8F8F95"
            android:textSize="10sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/basicinfo_addressView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" >

        <EditText
            android:id="@+id/basicinfo_addressEditView"
            android:layout_width="225dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_basic_edit_text"
            android:ems="10"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textCursorDrawable="@null"
            android:textColor="@color/white_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/message_in_descView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/basic_address"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/C_8F8F95"
            android:textSize="10sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/basicinfo_birthView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" >

        <EditText
            android:id="@+id/basicinfo_birthEditView"
            android:layout_width="225dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_basic_edit_text"
            android:ems="10"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textCursorDrawable="@null"
            android:textColor="@color/white_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/proifle_edit_nameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/basic_birthday"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/C_8F8F95"
            android:textSize="10sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/basicinfo_emailView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" >

        <EditText
            android:id="@+id/basicinfo_emailEditView"
            android:layout_width="225dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_basic_edit_text"
            android:ems="10"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textCursorDrawable="@null"
            android:textColor="@color/white_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/basic_email"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/C_8F8F95"
            android:textSize="10sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/basicinfo_websiteView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" >

        <EditText
            android:id="@+id/basicinfo_websiteEditView"
            android:layout_width="225dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_basic_edit_text"
            android:ems="10"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textCursorDrawable="@null"
            android:textColor="@color/white_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/basic_website"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/C_8F8F95"
            android:textCursorDrawable="@null"
            android:textSize="10sp" />

    </RelativeLayout>

</LinearLayout>
