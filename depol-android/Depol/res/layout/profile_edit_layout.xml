<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viwer_contnt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.tacademy.depol.widget.MyRoundedImageView
            android:id="@+id/icon_user"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_empty" />

        <ImageView
            android:id="@+id/icon_user_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/icon_user"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile_edit_camera" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/icon_user_edit"
            android:layout_marginTop="42dp" >

            <TextView
                android:id="@+id/tv_personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:text="@string/basic_info"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/stroke_color_type1"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/btn_edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/linearLayout1"
            android:background="@drawable/edit_profile_0" >

            <TextView
                android:id="@+id/proifle_edit_nameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/C_e5e5ea"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_edit_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/btn_edit_name"
            android:background="@drawable/edit_profile_0" >

            <TextView
                android:id="@+id/proifle_edit_jobView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/C_e5e5ea"
                android:textSize="16sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btn_edit_job"
            android:layout_marginTop="33dp" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:text="@string/job_info"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/stroke_color_type1"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/btn_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/linearLayout2"
            android:background="@drawable/edit_profile_0" >

            <TextView
                android:id="@+id/proifle_edit_statusView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/C_e5e5ea"
                android:textSize="16sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btn_job" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:text="@string/account_info"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/stroke_color_type1"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/btn_profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/linearLayout3"
            android:background="@drawable/edit_profile_0" >

            <TextView
                android:id="@+id/proifle_edit_emailView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/C_e5e5ea"
                android:textSize="16sp" />

        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>